<!DOCTYPE html>

<head>
  <% include ../static/partials/head.ejs %>
</head>
<body>

  <% include ../static/partials/navbar.ejs %>

  <div class="container">
    <h1>Collaborations</h1>
    <h3>Edit <%= wiki.title %></h3>
    <p>Add collaborators on:  <%= wiki.title %></p>

    <% include ../static/partials/messages.ejs %>

    <div class="collaboration-list">
      <form method="POST" action="collaborators/create" class="text-center">
        <table class="table-striped">
          <thead>
            <tr class="text-center">
              <th>Username</th>
              <th>Add</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
            <tr>
              <td><%= user.username %></td>
              <td><input type="radio" name="userId" value="<%= user.id %>"></td>
            </tr>
          <% }) %>
         </tbody>
       </table>
       <input type="submit" value="Add User" class="btn btn-secondary">
     </form>
   </div>
 </div>

 <% include ../static/partials/baseScripts.ejs %>

</body>
